{
  "manifest_version": 3,
  "name": "Rick Roll Blocker",
  "version": "1.0",
  "description": "Protects you from being Rick Rolled by blocking the famous link",
  
  "permissions": [
    "activeTab",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "rickroll_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rick Roll Blocker"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
